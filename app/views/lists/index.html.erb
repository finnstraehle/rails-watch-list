<div class="header">
  <h1>My Lists</h1>
</div>
<%= link_to "+ new list", new_list_path, class: "admin-button"%>
<%= link_to "< back", movies_path, class: "back-button"%>
<div class="grid">
  <% @lists.each do |list| %>
    <div class="card-list">
      <div class=card-list-images-container>
        <div class="card-list-images-grid">
          <% bookmarks = Bookmark.where(list_id: list.id) %>
          <% movies_in_list = bookmarks.map { |bookmark| bookmark.movie } %>
          <% movies_in_list.each do |movie| %>
            <img src="https://image.tmdb.org/t/p/w300<%= movie.poster_url %>">
          <% end %>
        </div>
      </div>
      <div class="card-list-infos">
        <h2><%= link_to list.name, list_path(list), class: "card-list-name" %></h2>
      </div>
    </div>
  <% end %>
</div>
