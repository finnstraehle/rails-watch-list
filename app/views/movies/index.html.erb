<h1>Movies</h1>
<%= link_to "MY LISTS", lists_path, class: "admin-button"%>
<div class="grid">
  <% @movies.each do |movie| %>
    <div class="card-movie">
      <img src="https://image.tmdb.org/t/p/w400/<%= movie.poster_url %>"/>
      <div class="card-movie-infos">
        <h2><%= link_to movie.title, movie_path(movie), class: "card-movie-name" %></h2>
        <p><%= movie.rating %> <%= icon('far', 'star')%></p>
      </div>
    </div>
  <% end %>
</div>
